#include <bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(0); cin.tie(0);
    freopen("outofplace.out", "w", stdout);
    freopen("outofplace.in", "r", stdin);
    int n; cin >> n;
    int a[n+2];
    a[0] = -1e7;
    for(int i=1; i<=n; i++) cin >> a[i];
    a[n+1] = 1e7;

    bool c1 = 0, c2 = 0;
    int idx1= -1, idx2 = -1;
    for(int i=1; i<=n; i++){
        if(a[i-1] > a[i]){ 
            c1 = 1;
            idx1 = i;
            break;
        }
    }
    for(int i=1; i<=n-1; i++){
        if(a[i+1] < a[i]){
            idx2 = i;
            c2 = 1;
            break;
        }
    }
    set <int> s;
    for(int i=1; i<=n; i++) s.insert(a[i]);
    vector <int> v;
    for(auto i: s) v.push_back(i);
    if(c1){ 
        auto k = find(v.begin(), v.end(), a[idx1-1]), j = find(v.begin(), v.end(), a[idx1]);
        cout << k-j;
    }
    else{  
        auto k = find(v.begin(), v.end(), a[idx2]), j = find(v.begin(), v.end(), a[idx2+1]);
        cout << k-j;
    }
    return 0;
}
