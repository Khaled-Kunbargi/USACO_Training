#include <bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(0); cin.tie(0);
    freopen("breedflip.out", "w", stdout);
    freopen("breedflip.in", "r", stdin);
    int n; cin >> n;
    string a, b; cin >> a >> b;

    int c=0;
    for(int i=0; i<n; i++){
        if(a[i] != b[i]) c++;
        while(a[i] != b[i]){
            i++;
        }
    }
    cout << c;
    return 0;
}
