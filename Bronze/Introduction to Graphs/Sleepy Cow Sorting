#include <bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(0); cin.tie(0);
    freopen("sleepy.out", "w", stdout);
    freopen("sleepy.in", "r", stdin);

    int n; cin >> n; 
    int a[n];
    for(int i=0; i<n; i++) cin >> a[i];
    
    int i = n-1;
    while(a[i-1] < a[i] && i >= 0){
        i--;
    }
    cout << i << "\n";
    return 0;
}
