#include <bits/stdc++.h>
using namespace std;
typedef long long ll; 

int main() {
    ios::sync_with_stdio(0); cin.tie(0);
    //freopen("snakes.in", "r", stdin);
    //freopen("snakes.out", "w", stdout);

    int n, k; cin >> n >> k;
    vector <int> a(n+1);
    int sum = 0;
    for(int i=1; i<=n; i++){ cin >> a[i]; sum += a[i]; }

    vector <vector <int>> dp(n+1, vector <int> (k+1));

    int larget_group = -1;
    for(int i=1; i<=n; i++){
        larget_group = max(larget_group, a[i]);
        dp[i][0] = i * larget_group;

        for(int j=1; j<=k; j++){
            int net_size = a[i];
            dp[i][j] = INT_MAX;
            for(int c = i-1; c >= 0; c--){
                dp[i][j] = min(dp[i][j], dp[c][j-1] + net_size*(i-c));
                net_size = max(net_size, a[c]);
            }
        }
    }   
    //for(int i=1; i<=n; i++) cout << dp[i][1] << ' ';
    //cout << "\n";
    cout << dp[n][k] - sum;

    return 0;
} 
