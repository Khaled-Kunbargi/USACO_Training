#include <bits/stdc++.h>
using namespace std;
typedef long long ll; 

int main() {
    ios::sync_with_stdio(0); cin.tie(0);
    freopen("teamwork.in", "r", stdin);
    freopen("teamwork.out", "w", stdout);

    int n, k; cin >> n >> k;
    int skill[n];
    for(int i=0; i<n; i++) cin >> skill[i];

    vector <int> dp(n, -1);
    for(int i=0; i<n; i++){
        int cur = skill[i];
        for(int j=i; j >= (i-k+1) && j >= 0; j--){
            cur = max(cur, skill[j]);
            if(j > 0){
                dp[i] = max(dp[i], dp[j-1] + cur * (i-j+1));
            }else{
                dp[i] = max(dp[i], cur * (i-j+1));
            }
        }
    }
    cout << dp[n-1];
    return 0;
} 
